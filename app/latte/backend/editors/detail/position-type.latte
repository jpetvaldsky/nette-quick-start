{layout '../../@layout.latte'}
{block content}
<h2>{$headline}</h2>
<form action="{$basePath}/{$pathPrefix}/" method="post" class="form-horizontal">
<div class="card">
    <div class="card-header">
        <strong>{ifset $item}Editace, ID: {$item->id}{else}Nový záznam{/ifset}</strong>
    </div>
    <div class="card-body">
            {include #textInput, id=>'title',title=>'Název',placeholder=>'Zadejte název pozice',value => isset($item)? $item->title: '' }
            {include #textInput, id=>'abbreviation',title=>'Zkratka',placeholder=>'Zkratka názvu pozice',value => isset($item)? $item->abbreviation: '' }

            {include #activeCheckbox}
        
    </div>
    {include #formSubmit}
</div>
</form>
{/block}