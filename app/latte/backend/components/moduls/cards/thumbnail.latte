{define cardBlock}
<div class="card">
    <div class="card-header">
        {if $item->title != ''}{$item->title}{else}<strong>ID:</strong> {$item->id}{/if}
        <div class="card-header-actions">
            {include #actionButtons, item=>$item}
        </div>
    </div>
    <div class="card-body">
        <div class="text-center">
            {$item->mediaHash|thumb,200,0|noescape}
        </div>
    </div>
</div>
{/define}
